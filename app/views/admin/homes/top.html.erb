<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-5">注文履歴一覧</h2>
    </div>
    <div class="col-12">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d  %H:%M:%S'), admin_order_path(order) %></td>
              <td>
                <%= link_to order.customer.last_name + order.customer.first_name, admin_customers_path %>
              </td>
              <td>
                <%= order.order_details.inject(0) {|sum, hash| sum + hash[:count]}  %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>