<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-3">ジャンル編集</h2>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="form-group text-center mb-5">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "変更を保存", class:"btn btn-success rounded-pill ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>