<% genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success rounded-pill" %></td>
    <td><%= link_to "削除する", admin_genre_path(genre), method: :delete, remote: true, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn btn-danger rounded-pill" %></td>
  </tr>
<% end %>