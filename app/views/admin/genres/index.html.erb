<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-3">ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: admin_genres_path, local: false do |f| %>
        <div class="form-group text-center mb-3">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, id:"name" %>
          <%= f.submit "新規登録", class:"btn btn-warning rounded-pill ml-4" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4 text-center">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody id="genre_table">
          <%= render "admin/genres/genre_table", genres: @genres %>
        </tbody>
      </table>
    </div>
  </div>
</div>