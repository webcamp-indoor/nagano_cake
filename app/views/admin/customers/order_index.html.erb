<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-5"><%= @customer.last_name + @customer.first_name %>さんの注文履歴</h2>
    </div>
    <div class="col-12">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order|%>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d  %H:%M:%S'), admin_order_path(order) %></td>
              <td>
                <%= order.order_details.count %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>