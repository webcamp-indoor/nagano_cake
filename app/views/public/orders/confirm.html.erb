<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center mb-5">注文情報確認</h2>
    </div>
    <div class="col-8">
      <table class="table table-bordered mb-4">
        <thead>
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="align-middle">
                <%= image_tag cart_item.item.get_image(100,100) %>
                <%= cart_item.item.name %>
              </td>
              <!--金額の算出は橋本さんのカート機能と合わせる-->
              <td class="align-middle"><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
              <td class="align-middle"><%= cart_item.count %></td>
              <td class="align-middle"><%= ((cart_item.item.price*1.1).floor*cart_item.count).to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <th class="table-secondary">送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">商品合計</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="table-secondary">請求金額</th>
          <td><%= (@order.postage + @order.total_payment).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="mb-4">
    <span>支払方法</span>
    <!--日本語化するのを忘れずに-->
    <%= @order.payment_method %>  日本語化したい
  </div>
  <div class="mb-4">
    お届け先
    <%= "〒" + @order.post_code + " " + @order.address + " " + @order.name %>
  </div>
  <div class="text-center mb-5">
    <%= form_with model:@order, url: orders_path, method: :post do |f| %>
      <%= f.submit "注文を確定する", class:"btn btn-success" %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :postage %>
      <%= f.hidden_field :status %>
      <%= f.hidden_field :total_payment %>
    <% end %>
  </div>
</div>
