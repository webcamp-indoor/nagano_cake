<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-3">
      <h2 class="text-center mb-3">マイページ</h2>
    </div>
    <div class="col-5 offset-1 mb-2">
      <h3>登録情報</h3>
    </div>
    <div class="col-5 text-right mb-2">
      <%=link_to "編集する",edit_customers_path,class: "btn btn-success rounded-pill"%>
    </div>
    <div class="col-10 offset-1 mb-4">
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row" class="table-active align-middle text-center">氏名</th>
          <td><%= @customer.last_name + @customer.first_name  %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center">カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana  %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active align-middle text-center">郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center">住所</th>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center">電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th scope="row" class="table-active text-center">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-5 offset-1 text-center">
      <h3>配送先</h3>
      <%=link_to "一覧を見る", addresses_path ,class: "btn btn-primary btn-lg rounded-pill"%>
    </div>
    <div class="col-5 text-center">
      <h3>注文履歴</h3>
        <%=link_to "一覧を見る", orders_path ,class: "btn btn-primary btn-lg rounded-pill"%>
    </div>
  </div>
</div>

