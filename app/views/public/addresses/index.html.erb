<div class="container mt-5">
 <h2 class="text-center">配送先登録/一覧</h2>
 <div class="row mt-3 offset-4">
  <%= form_with model: @address, url: addresses_path, method: :post, local: false do |f| %>
    <table class="mx-auto">
     <tr>
       <td><%= f.label :"郵便番号(ハイフンなし)"%></td>
       <td><%= f.text_field :post_code, class: "form-control", id: "post_code" %></td>
     </tr>
     <tr>
       <td><%= f.label :"住所"%></td>
       <td><%= f.text_field :address, class: "form-control", id: "address" %></td>
     </tr>
     <tr>
      <td> <%= f.label :"宛名" %></td>
      <td><%= f.text_field :name, class: "form-control", id: "name" %></td>
     </tr>
      <tr>
        <td></td>
        <td><%= f.submit '登録する' ,class: "btn btn-success rounded-pill mt-3 mb-5 d-block mx-auto" %></td>
      </tr>
   </table>
  <% end %>
 </div>


  <div class="row">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody id="address_index">
        <%= render "public/addresses/index", addresses: @addresses%>
      </tbody>
    </table>
  </div>
</div>
