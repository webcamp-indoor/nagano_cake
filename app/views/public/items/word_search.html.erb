<div class="container">
  <div class="row">
    <div class="col-2">
      <%= render "genre", genres: @genres%>
    </div>
    <div class="col-10">
      <h2 class="text-center">キーワード検索結果</h2>
      <h5 class=" text-center mb-5">検索結果は<%= @items_search.count %>件です。</h5>
      <%= render "public/items/card", items: @items_search %>
      <div class="mt-4 mb-4 justify-content-center d-flex">
        <%= paginate @items_search %>
      </div>
    </div>
  </div>
</div>