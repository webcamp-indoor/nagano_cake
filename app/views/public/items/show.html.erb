<div class="container mt-5">
  <div class="row mb-5">
    <div class="col-2">
      <%= render "public/items/genre", genres: @genres%>
    </div>
    <div class="col-5 text-center">
      <%= image_tag @item.get_image(400,400),style:"height:auto; width:400px; object-fit: cover" %>
    </div>
    <div class="col-3">
      <h3 class="font-weight-bold mb-3"><%= @item.name %></h3>
      <div class="mb-3"><%= @item.introduction %></div>
      <div class="mb-3">ジャンル：<%= link_to @item.genre.name, genre_search_items_path(genre_id: @item.genre.id)  %></div>
      <!--文字数が長いときの検証が必要-->
    </div>
    <div class="col-2", style="border:solid; border-radius:5%; height:200px ">
      <div class="mt-3 mb-3">
        <span class="h4">¥ <%= @item.tax_price.to_s(:delimited) %></span> (税込)
      </div>
      <div class="mb-3">
        <% if @item.is_active == true %>
          <div class="font-weight-bold text-success mb-3">販売中</div>
          <%= form_with model: @cart_item, url: cart_items_path do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <div class="mb-3">
              <%= f.number_field :count, step: "1", placeholder: "個数入力", min: 1, style:"width:100px"  %>
            </div>
            <div class="d-flex justify-content-center">
              <%= f.submit "カートに入れる", class: "btn btn-warning rounded-pill" %>
            </div>
          <% end %>
        <% else %>
          <span class="font-weight-bold text-danger">販売停止中</span>
        <% end %>
      </div>
    </div>
  </div>

    <div class="offset-1 col-11">
      <hr class="w-100">
      <h3 class="float-left">カスタマーレビュー</h3>
    </div>

    <div class="offset-1 col-10">
      <!-- レビューする箇所 -->
      <div class="row">
        <% @reviews.each do |review| %>
          <div class="offset-md-5 col-md-5">
            <!--星評価の表示-->
            <p class="review-evaluation" data-score="<%= review.evaluation %>"></p>
            <!--レビュー-->
            <p class="h3"><%= review.content %></p>
            <label><%= review&.created_at&.strftime('%Y/%m/%d') %></label>
            <% if review.customer == current_customer %>
              <%= link_to "削除", item_review_path(review), method: :delete %>
            <% end %>
          </div>
        <% end %>
      </div>

      <% if customer_signed_in? %>
        <div class="row">
          <div class="offset-md-5 col-md-5">
            <%= form_with model: @review, url: item_reviews_path(@item) do |f| %>
              <!--星評価-->
              <div class="form-group row" id="evaluate_stars">
                <%= f.label :rate,'総合評価', class:'col-md-3 col-form-label' %>
                <%= f.hidden_field :rate, id: :review_star %>
              </div>
              <!--レビュー-->
              <%= f.text_area :content, class: "form-control ml-2" %>
              <%= f.submit "レビューを追加" , class:"btn btn-primary ml-2 my-3"%>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>

<!--星評価javascript/投稿する-->
<script>
  $('#evaluate_stars').raty({
    size     : 1,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'review[evaluation]',
    half: true,
  });
</script>

<!--星評価javascript/投稿を表示-->
<script>
  $('.review-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>
