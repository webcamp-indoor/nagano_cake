<% if page.current? %>
  <li class="page-item active">
    <!--力技で色を変えている-->
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link', style: "background: #93c9ff" %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link' %>
  </li>
<% end %>
